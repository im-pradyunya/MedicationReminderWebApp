@using Microsoft.AspNetCore.Identity;
@model MedicationReminder.Models.ViewModel.PatientInfo
@inject UserManager<ApplicationUser> UserManager
  

@{
    var user = await UserManager.GetUserAsync(User);
}

<script>
    // Get the alert element
    var alertElement = document.getElementById('alertMessage');

    // Check if the alert element exists
    if (alertElement) {
        // Show the alert for 3 seconds (adjust duration as needed)
        setTimeout(function () {
            alertElement.style.display = 'none'; // Hide the alert
            // Redirect to another page after the alert disappears
            window.location.href = '/Home/Index'; // Redirect to Home/Index
        }, 3000); // 3 seconds (3000 milliseconds)
    }
</script>

@if (TempData["AlertMessage"] != null)
{
    <div id="alertMessage" class="alert alert-info" role="alert">
        @TempData["AlertMessage"]
    </div>
}



<div class="container mt-4 ">
  <div class="card form-card">
    <div class="card-body">
      <h2 class="card-title form-card-title text-center mb-4">Additional Information</h2>
      
      <form method="post">
        <div class="mb-3">
          <label for="inputName" class="form-label">Name</label>
          <input type="text" class="form-control" id="inputName" placeholder="Enter your name" value=@user.Name  asp-for="Name" >
                    <span asp-validation-for="Name" class="text-danger"></span>
        </div>
       
        <div class="mb-3">
          <label for="inputAge" class="form-label">Age</label>
                    <input type="number" class="form-control" id="inputAge" placeholder="Enter your age" asp-for="Age">
                    <span asp-validation-for="Age" class="text-danger"></span>
        </div>
     
        <div class="mb-3">
          <label for="inputGender" class="form-label">Gender</label>
            <select class="form-control" id="inputGender" asp-for="Gender">
            <option value="Select">Select</option>
            <option value="male">Male</option>
            <option value="female">Female</option>
            <option value="other">Other</option>
          </select>
         <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
      
        <div class="mb-3">
          <label for="inputHeight" class="form-label">Height (in cm)</label>
                    <input type="number" class="form-control" id="inputHeight" placeholder="Enter your height" asp-for="Height">
                    <span asp-validation-for="Height" class="text-danger"></span>
        </div>
     
        <div class="mb-3">
          <label for="inputWeight" class="form-label">Weight (in kg)</label>
                    <input type="number" class="form-control" id="inputWeight" placeholder="Enter your weight" asp-for="Weight">
                    <span asp-validation-for="Weight" class="text-danger"></span>
        </div>
     

      

               

     
        <div class="mb-3">
          <label class="form-label">Do you exercise regularly?</label>
          <div>
            <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="exercise" id="exerciseYes" value="yes" asp-for="Exercise">
              <label class="form-check-label" for="exerciseYes">Yes</label>
            </div>
            <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="exercise" id="exerciseNo" value="no" asp-for="Exercise">
              <label class="form-check-label" for="exerciseNo">No</label>
                           
            </div>             
            </div>
            <span asp-validation-for="Exercise" class="text-danger"></span>
            </div>


                        <div class="mb-3">
                            <label for="input" class="form-label">Do you currently have any existing medical conditions or diseases?</label>
                            <input type="text" class="form-control" id="inputName" placeholder="If Yes, Please Describe" asp-for="PresentDisease">
                            <span asp-validation-for="PresentDisease" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="input" class="form-label">Have you had any previous medical conditions or diseases in the past?</label>
                            <input type="text" class="form-control" id="inputName" placeholder="If Yes, Please Describe" asp-for="PastDisease">
                            <span asp-validation-for="PastDisease" class="text-danger"></span>
                        </div>
                        
                          <button type="submit" class="btn btn-primary btn-submit">Save</button>
                  </form>


          </div>
        </div>
      
              
           
        </div>
